<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    app:columnCount="3"
    app:rowCount="2"
    app:orientation="horizontal"
    android:layout_margin="4dp"
    >
    <LinearLayout
        app:layout_rowWeight="1"
        app:layout_columnWeight="1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/color1"
        android:layout_margin="4dp"
        android:orientation="vertical"
        >

        <ImageView
            android:id="@+id/comfig"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:src="@drawable/ic_settings_black_24dp"
            android:adjustViewBounds="true"
            android:tint="@color/colorA1"
            android:layout_weight="10"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/text_settings"
            android:textColor="@color/colorA1"
            android:layout_weight="1"
            android:textSize="24sp"
            android:gravity="center"
            android:padding="4dp"

            />
    </LinearLayout>
    <LinearLayout
        app:layout_rowWeight="1"
        app:layout_columnWeight="1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/color2"
        android:layout_margin="4dp"
        android:orientation="vertical"
        app:layout_column="1"
        app:layout_row="0">

        <ImageView
            android:id="@+id/profile"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:src="@drawable/ic_person_black_24dp"
            android:adjustViewBounds="true"
            android:tint="@color/colorA2"
            android:layout_weight="10"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/text_profile"
            android:textColor="@color/colorA2"
            android:layout_weight="1"
            android:textSize="24sp"
            android:gravity="center"
            android:padding="4dp"

            />
    </LinearLayout>
    <LinearLayout
        app:layout_rowWeight="1"
        app:layout_columnWeight="1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/color3"
        android:layout_margin="4dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/fav"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:src="@drawable/ic_favorite_black_24dp"
            android:adjustViewBounds="true"
            android:tint="@color/colorA3"
            android:layout_weight="10"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/text_favorites"
            android:textColor="@color/colorA3"
            android:layout_weight="1"
            android:textSize="24sp"
            android:gravity="center"
            android:padding="4dp"

            />
    </LinearLayout>
    <LinearLayout
        app:layout_rowWeight="1"
        app:layout_columnWeight="1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/color4"
        android:layout_margin="4dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/income"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:src="@drawable/ic_monetization_on_black_24dp"
            android:adjustViewBounds="true"
            android:tint="@color/colorA4"
            android:layout_weight="10"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/text_income"
            android:textColor="@color/colorA4"
            android:layout_weight="1"
            android:textSize="24sp"
            android:gravity="center"
            android:padding="4dp"

            />
    </LinearLayout>
    <LinearLayout
        app:layout_rowWeight="1"
        app:layout_columnWeight="1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/color5"
        android:layout_margin="4dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/budget"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:src="@drawable/ic_local_atm_black_24dp"
            android:adjustViewBounds="true"
            android:tint="@color/colorA5"
            android:layout_weight="10"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/text_budget"
            android:textColor="@color/colorA5"
            android:layout_weight="1"
            android:textSize="24sp"
            android:gravity="center"
            android:padding="4dp"

            />
    </LinearLayout>
    <LinearLayout
        app:layout_rowWeight="1"
        app:layout_columnWeight="1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/color6"
        android:layout_margin="4dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/expenses"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:src="@drawable/ic_settings_black_24dp"
            android:adjustViewBounds="true"
            android:tint="@color/colorA6"
            android:layout_weight="10"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/text_expenses"
            android:textColor="@color/colorA6"
            android:layout_weight="1"
            android:textSize="24sp"
            android:gravity="center"
            android:padding="4dp"

            />
    </LinearLayout>
</android.support.v7.widget.GridLayout>